<% content_for :title, "ねこ一覧" %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h3">ねこ一覧</h1>
  <%= link_to icon_with_text("plus-circle", "ねこを登録"), new_cat_path, class: "btn btn-primary" %>
</div>

<div class="card mb-3">
  <div class="card-header">
    <%= icon_with_text("search", "検索条件") %>
  </div>
  <div class="card-body">
    <%= search_form_for @search, html: { class: "row row-cols-lg-auto g-3 align-items-center" } do |f| %>
      <div class="col-12">
        <%= f.label :name_cont, "名前", class: "form-label" %>
        <%= f.search_field :name_cont, class: "form-control", placeholder: "名前で検索" %>
      </div>

      <div class="col-12">
        <%= f.label :age_eq, "年齢", class: "form-label" %>
        <%= f.search_field :age_eq, class: "form-control", placeholder: "年齢で検索" %>
      </div>

      <div class="col-12 d-flex align-items-end">
        <%= f.submit "検索", class: "btn btn-primary me-2" %>
        <%= link_to "クリア", cats_path, class: "btn btn-outline-secondary" %>
      </div>
    <% end %>
  </div>
</div>

<div class="d-flex justify-content-start mb-3 gap-3">
  <%= sort_link(@search, :name, "名前") %>
  <%= sort_link(@search, :age, "年齢") %>
</div>

<div id="cats">
  <% @cats.each do |cat| %>
    <%= render cat %>
  <% end %>
</div>

<div class="d-flex justify-content-end mt-3">
  <%= paginate @cats %>
</div>
